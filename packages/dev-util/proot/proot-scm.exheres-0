SUMMARY='user-space implementation of chroot, mount --bind and binfmt_misc'
HOMEPAGE='https://github.com/cedric-vincent/PRoot'
SCM_REPOSITORY='git://github.com/cedric-vincent/PRoot'

require scm-git

LICENCES='GPL-2'
PLATFORMS='~amd64 ~x86'

DEPENDENCIES='
  recommendation:
    app-virtualization/qemu
'

src_compile() {
  cd $WORK/src
  emake
}

src_install() {
  cd $WORK/src
  emake PREFIX=$IMAGE install
}
